        include ../components/header.pug
        section.contact.container 
            .contact__block
                .contact__left 
                    h2.heading-secondary Have a Question?
                    h2.heading-secondary.margin-bottom-middle Get in Touch with usðŸ‘‹
                    p.text Fill up the Form and ou team will get back to within 24 hours 
                    form.contact__form
                        .contact__info
                            input.contact__name.contact__input(type="text" placeholder="Name")
